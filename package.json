    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "valibot": "^1.1.0"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
