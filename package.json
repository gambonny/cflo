{
  "name": "@gambonny/cflo",
  "author": "Jonny Gamba",
  "sideEffects": false,
  "version": "0.0.13",
  "description": "Minimal, type-safe logger for Cloudflare Workers â€” pretty or JSON, with log level filtering and edge-safe methods only.",
  "main": "dist/index.mjs",
  "types": "dist/index.mts",
  "scripts": {
    "prepare": "lefthook install",
    "build": "tsdown",
